{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "__tests__/**/*", "src/test/testing-library.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"],
  "types": ["node", "jest", "@testing-library/jest-dom"]
}
